{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Validation": {
    "MinimumCustomerAge": 18, // Miminum age allowed for customer regsitration
    "MinimumNameLength": 3, // Minimum First and Last name length
    "MaximumNameLength": 50, // Maximum First and Last name length
    // Follows format XX-999999.Where XX are any capitalised alpha character followed by a hyphen and 6 numbers
    "PolicyReferencePattern": "^[A-Z]{2}-\\d{6}$",
    // Follows format email address where string starts with least 4 alpha numeric chars followed by an ‘@’ sign and then another string
    // of at least 2 alpha numeric chars. Ends in either ‘.com’ or ‘.co.uk’.
    "EmailPattern": "^[\\w]{4,}@\\w{2,}(.com|.co.uk)$"
  },
  "AllowedHosts": "*"


}
